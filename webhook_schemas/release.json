{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "release",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "app_min_version": {
      "type": "string"
    },
    "app_max_version": {
      "type": "string"
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "environments": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "locale_codes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "version",
    "app_min_version",
    "app_max_version",
    "platforms",
    "environments",
    "locale_codes",
    "tags",
    "created_at",
    "updated_at"
  ]
}